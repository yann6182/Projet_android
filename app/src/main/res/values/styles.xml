<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Style pour les boutons principaux -->
    <style name="Button.Primary" parent="Widget.AppCompat.Button">
        <item name="android:background">@color/primary</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:padding">12dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:elevation">2dp</item>
    </style>

    <!-- Style pour les boutons secondaires -->
    <style name="Button.Secondary" parent="Widget.AppCompat.Button">
        <item name="android:background">@color/accent</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:padding">12dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:elevation">2dp</item>
    </style>

    <!-- Style pour les titres de produits -->
    <style name="ProductTitle">
        <item name="android:textColor">@color/primary_text</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:maxLines">2</item>
        <item name="android:ellipsize">end</item>
    </style>

    <!-- Style pour les prix -->
    <style name="ProductPrice">
        <item name="android:textColor">@color/accent</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Style pour les cartes de produits -->
    <style name="ProductCard">
        <item name="android:background">@color/white</item>
        <item name="android:elevation">3dp</item>
        <item name="android:layout_margin">6dp</item>
        <item name="android:padding">8dp</item>
    </style>
</resources> 